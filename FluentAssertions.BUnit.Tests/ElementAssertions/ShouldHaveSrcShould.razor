@using Xunit.Sdk
@inherits Bunit.TestContext

@code {
    
    [Fact]
    public void ReturnElement()
    {
        var element = Render(@<img src="/logo.png" alt="Logo">).AsElement();
        
        var returnedElement = element.ShouldHaveSrc("/logo.png");

        returnedElement.Should().Be(element);
    }

    [Fact]
    public void SucceedWhenSrcMatches()
    {
        Render(@<img src="/logo.png" alt="Logo">)
            .AsElement()
            .ShouldHaveSrc("/logo.png");
    }
    
    [Fact]
    public void ThrowExceptionWhenSrcDoesNotMatch()
    {
        Action aut = () => Render(@<img src="/logo.png" alt="Logo">)
            .AsElement()
            .ShouldHaveSrc("/oops.png");

        aut.Should().Throw<XunitException>();
    }

    [Fact]
    public void ThrowExceptionWhenDoesNotHaveSrc()
    {
        Action aut = () => Render(@<img alt="Logo">)
                            .AsElement()
                            .ShouldHaveSrc("/logo.png");

        aut.Should().Throw<XunitException>();
    }
}