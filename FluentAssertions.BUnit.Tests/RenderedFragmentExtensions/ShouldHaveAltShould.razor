@using Xunit.Sdk
@inherits Bunit.TestContext

@code {
    
    [Fact]
    public void ReturnRenderedFragment()
    {
        var renderedFragment = Render(@<img src="/logo.png" alt="Logo">);
        
        var returnedRenderedFragment = renderedFragment.ShouldHaveAlt("Logo");

        returnedRenderedFragment.Should().BeSameAs(renderedFragment);
    }

    [Fact]
    public void SucceedWhenAltMatches()
    {
        Render(@<img src="/logo.png" alt="Logo">)
            .ShouldHaveAlt("Logo");
    }
    
    [Fact]
    public void ThrowExceptionWhenAltDoesNotMatch()
    {
        Action aut = () => Render(@<img src="/logo.png" alt="Logo">)
            .ShouldHaveAlt("Face");

        aut.Should().Throw<XunitException>();
    }

    [Fact]
    public void ThrowExceptionWhenDoesNotHaveAlt()
    {
        Action aut = () => Render(@<img src="/logo.png">)
            .ShouldHaveAlt("Logo");

        aut.Should().Throw<XunitException>();
    }
}