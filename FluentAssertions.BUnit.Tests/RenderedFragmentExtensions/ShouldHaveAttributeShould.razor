@using Xunit.Sdk
@inherits Bunit.TestContext

@code {

    [Fact]
    public void ReturnRenderedFragment()
    {
        var renderedFragment = Render(@<img src="/logo.png" alt="Logo">);

        var returnedRenderedFragment = renderedFragment.ShouldHaveAttribute("src", "/logo.png");

        returnedRenderedFragment.Should().BeSameAs(renderedFragment);
    }

    [Fact]
    public void SucceedWhenSrcMatches()
    {
        Render(@<img src="/logo.png" alt="Logo">)
            .ShouldHaveAttribute("src", "/logo.png");
    }

    [Fact]
    public void ThrowExceptionWhenSrcDoesNotMatch()
    {
        Action aut = () => Render(@<img src="/logo.png" alt="Logo">)
            .ShouldHaveAttribute("src", "/oops.png");

        aut.Should().Throw<XunitException>();
    }

    [Fact]
    public void ThrowExceptionWhenDoesNotHaveSrc()
    {
        Action aut = () => Render(@<img alt="Logo">)
            .ShouldHaveAttribute("src", "/logo.png");

        aut.Should().Throw<XunitException>();
    }
}