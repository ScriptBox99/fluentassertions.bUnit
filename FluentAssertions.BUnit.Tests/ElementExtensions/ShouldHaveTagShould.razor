@using Xunit.Sdk
@inherits Bunit.TestContext

@code {
    
    [Fact]
    public void ReturnElement()
    {
        var element = Render(@<button><h1>Test</h1></button>).AsElement();
        
        var returnedElement = element.ShouldHaveTag("button");

        returnedElement.Should().BeSameAs(element);
    }

    [Fact]
    public void SucceedWhenHasTag()
    {
        Render(@<button><h1>Test</h1></button>)
            .AsElement()
            .ShouldHaveTag("button");
    }
    
    [Fact]
    public void ThrowExceptionWhenDoesNotHaveTag()
    {
        Action aut = () => Render(@<button><h1>Test</h1></button>)
                            .AsElement()
                            .ShouldHaveTag("div");

        aut.Should().Throw<XunitException>();
    }
}