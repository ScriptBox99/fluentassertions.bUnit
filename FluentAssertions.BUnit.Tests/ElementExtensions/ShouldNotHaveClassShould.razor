@using Xunit.Sdk
@inherits Bunit.TestContext

@code {
    
    [Fact]
    public void ReturnElement()
    {
        var element = Render(@<button Class="btn big cta"><h1>Test</h1></button>).AsElement();
        
        var returnedElement = element.ShouldNotHaveClass("none");

        returnedElement.Should().BeSameAs(element);
    }

    [Fact]
    public void SucceedWhenDoesNotHaveClass()
    {
        Render(@<button Class="btn big cta"><h1>Test</h1></button>)
            .AsElement()
            .ShouldNotHaveClass("none");
    }

    [Theory]
    [InlineData("big")]
    [InlineData("cta")]
    [InlineData("btn")]
    public void ThrowExceptionWhenHasUnexpectedClass(string unexpectedClass)
    {
        Action aut = () => Render(@<button Class="btn big cta"><h1>Test</h1></button>)
                            .AsElement()
                            .ShouldNotHaveClass(unexpectedClass);

        aut.Should().Throw<XunitException>();
    }
}